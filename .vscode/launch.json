    "version": "0.2.0",
    "configurations": [
        {
            "name": "RobotPy: Simulate",
            "type": "debugpy",
            "request": "launch",
            "module": "robotpy",
            "args": [
                "sim"
            ]
        },
        {
            "name": "RobotPy: Test",
            "type": "debugpy",
            "request": "launch",
            "module": "robotpy",
            "args": [
                "test"
            ]
        },
        {
            "name": "Python: Attach to roboRIO",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "10.47.74.2",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ]
}